#!/bin/bash -xeu

rm -rf web_dist
mkdir -p web_dist

bin/build-web-widget

# production bootstrap'able bundle
pushd init
npm i
npm run build
popd
mkdir -p web_dist/widget/dist
cp init/dist/init.*.js web_dist/widget/dist/
# merge redirects into firebase config
jq -Mn '$f1 * $f2 | .hosting.headers = ($f1.hosting.headers + $f2.hosting.headers | unique) | .hosting.rewrites = ($f1.hosting.rewrites + $f2.hosting.rewrites | unique) | .hosting.redirects = ($f1.hosting.redirects + $f2.hosting.redirects | unique)' \
  --argfile f1 firebase.json \
  --argfile f2 init/dist/firebase-hosting-config.json \
  > firebase.deploy.json

# snapwallet.io
pushd web
npm i
npm run build
popd
mkdir -p web/build/prerendered
mv web/build/assets/* web/build/prerendered/.
mv web/build/prerendered/* web_dist/.

# docs: api + getting started examples
pushd docs
npm i
npm run build
popd
mkdir -p web_dist/docs
mv docs/_book web_dist/docs/guide

mkdir -p web_dist/docs/api
cp api/lib/swagger/swagger-ui.html web_dist/docs/api/index.html
sed -i.bak 's/\/swagger\.json/https:\/\/api.snapwallet.io\/swagger\.json/g' web_dist/docs/api/index.html
rm web_dist/docs/api/*.bak
