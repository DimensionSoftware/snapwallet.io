{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "web_dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**/*.@(js|css|jpg|jpeg|gif|png)",
        "headers": [
          {
            "key": "cache-control",
            "value": "max-age=31557600"
          }
        ]
      },
      {
        "source": "/widget/dist/init.js",
        "headers": [
          {
            "key": "cache-control",
            "value": "max-age=30"
          }
        ]
      },
      {
        "source": "/widget/global.css",
        "headers": [
          {
            "key": "cache-control",
            "value": "max-age=30"
          }
        ]
      },
      {
        "source": "**/favicon.@(ico|png)",
        "headers": [
          {
            "key": "cache-control",
            "value": "max-age=86400"
          }
        ]
      }
    ],
    "rewrites": [],
    "redirects": []
  }
}